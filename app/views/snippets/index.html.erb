

<%= search_form_for @q do |f| %>

 
  <%= f.search_field :snippet_text_cont %>

  <%= f.submit %>

<% end %>



<p>Total Snippet : <%= total_snippet %></p>
<p><%= link_to 'New Snippet', new_snippet_path %></p>

<table>
  <thead>
    <tr>
      <th>Snippet text</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snippets.each do |snippet| %>
      <tr>
        <td><%= link_to snippet.snippet_text.split[0...15].join(' ') , snippet %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @snippets %>


